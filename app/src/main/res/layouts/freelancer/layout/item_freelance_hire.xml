<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#808080"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fHFimageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintStart_toEndOf="@+id/fHFimageView4"
            app:layout_constraintTop_toBottomOf="@+id/fHFUsername" />

        <ImageView
            android:id="@+id/fHFimageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintEnd_toEndOf="@+id/fHFimageView5"
            app:layout_constraintStart_toStartOf="@+id/fHFimageView5"
            app:layout_constraintTop_toBottomOf="@+id/fHFimageView5" />

        <TextView
            android:id="@+id/fHFAttack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="0"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/fHFimageView5"
            app:layout_constraintEnd_toStartOf="@+id/fHFDivider"
            app:layout_constraintStart_toEndOf="@+id/fHFimageView5"
            app:layout_constraintTop_toTopOf="@+id/fHFimageView5" />

        <TextView
            android:id="@+id/fHFDefense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="0"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/fHFimageView6"
            app:layout_constraintEnd_toStartOf="@+id/fHFDivider"
            app:layout_constraintStart_toEndOf="@+id/fHFimageView6"
            app:layout_constraintTop_toBottomOf="@+id/fHFimageView5" />

        <ImageView
            android:id="@+id/fHFimageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@+id/fHFimageView5"
            app:layout_constraintStart_toEndOf="@+id/fHFDivider"
            app:layout_constraintTop_toTopOf="@+id/fHFimageView5" />

        <ImageView
            android:id="@+id/fHFimageView8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@+id/fHFimageView6"
            app:layout_constraintEnd_toEndOf="@+id/fHFimageView7"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/fHFDefense"
            app:layout_constraintTop_toTopOf="@+id/fHFimageView6" />

        <TextView
            android:id="@+id/fHFCovertAttack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="8dp"
            android:text="0"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/fHFAttack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/fHFimageView7"
            app:layout_constraintTop_toTopOf="@+id/fHFAttack" />

        <TextView
            android:id="@+id/fHFCovertDefense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="8dp"
            android:text="0"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/fHFDefense"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/fHFimageView8"
            app:layout_constraintTop_toTopOf="@+id/fHFDefense" />

        <TextView
            android:id="@+id/fHFValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="0"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/fHFimageView9"
            app:layout_constraintStart_toEndOf="@+id/fHFimageView9"
            app:layout_constraintTop_toTopOf="@+id/fHFimageView9" />

        <ImageView
            android:id="@+id/fHFimageView9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintStart_toStartOf="@+id/fHFimageView6"
            app:layout_constraintTop_toBottomOf="@+id/fHFimageView6" />

        <ImageView
            android:id="@+id/fHFimageView4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_rocket_bomb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fHFUsername"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/fHFUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="17sp"
            android:autoSizeStepGranularity="3sp"
            android:autoSizeTextType="uniform"
            android:text="Username1234567890"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fHFHireButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="#FF9800"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Hire"
            android:textSize="10sp"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/fHFProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginBottom="2dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="Profile"
            android:textAlignment="center"
            android:textSize="10sp"
            app:cornerRadius="10dp"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fHFimageView4"
            app:layout_constraintStart_toStartOf="@+id/fHFimageView4"
            app:layout_constraintTop_toBottomOf="@+id/fHFimageView4"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/fHFUserID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="User ID"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible" />

        <View
            android:id="@+id/fHFDivider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.592"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>