<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#808080"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iFOimageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintStart_toEndOf="@+id/iFOimageView4"
            app:layout_constraintTop_toBottomOf="@+id/iFOUsername" />

        <ImageView
            android:id="@+id/iFOimageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintEnd_toEndOf="@+id/iFOimageView5"
            app:layout_constraintStart_toStartOf="@+id/iFOimageView5"
            app:layout_constraintTop_toBottomOf="@+id/iFOimageView5" />

        <TextView
            android:id="@+id/iFOAttack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="0"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/iFOimageView5"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintStart_toEndOf="@+id/iFOimageView5"
            app:layout_constraintTop_toTopOf="@+id/iFOimageView5" />

        <TextView
            android:id="@+id/iFODefense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:text="0"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/iFOimageView6"
            app:layout_constraintEnd_toStartOf="@+id/divider"
            app:layout_constraintStart_toEndOf="@+id/iFOimageView6"
            app:layout_constraintTop_toBottomOf="@+id/iFOimageView5" />

        <ImageView
            android:id="@+id/iFOimageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@+id/iFOimageView5"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toTopOf="@+id/iFOimageView5" />

        <ImageView
            android:id="@+id/iFOimageView8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintBottom_toBottomOf="@+id/iFOimageView6"
            app:layout_constraintEnd_toEndOf="@+id/iFOimageView7"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/iFODefense"
            app:layout_constraintTop_toTopOf="@+id/iFOimageView6" />

        <TextView
            android:id="@+id/iFOCovertAttack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="8dp"
            android:text="0"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/iFOAttack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iFOimageView7"
            app:layout_constraintTop_toTopOf="@+id/iFOAttack" />

        <TextView
            android:id="@+id/iFOCovertDefense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="8dp"
            android:text="0"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/iFODefense"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iFOimageView8"
            app:layout_constraintTop_toTopOf="@+id/iFODefense" />

        <TextView
            android:id="@+id/iFOValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="0"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/iFOimageView9"
            app:layout_constraintStart_toEndOf="@+id/iFOimageView9"
            app:layout_constraintTop_toTopOf="@+id/iFOimageView9" />

        <ImageView
            android:id="@+id/iFOimageView9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher"
            app:layout_constraintStart_toStartOf="@+id/iFOimageView6"
            app:layout_constraintTop_toBottomOf="@+id/iFOimageView6" />

        <ImageView
            android:id="@+id/iFOimageView4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_rocket_bomb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iFOUsername"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/iFOUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="17sp"
            android:autoSizeStepGranularity="3sp"
            android:autoSizeTextType="uniform"
            android:text="Username1234567890"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/iFODischargeButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="#FF9800"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Discharge"
            android:textSize="10sp"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/iFOProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginBottom="2dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:text="Profile"
            android:textAlignment="center"
            android:textSize="10sp"
            app:cornerRadius="10dp"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iFOimageView4"
            app:layout_constraintStart_toStartOf="@+id/iFOimageView4"
            app:layout_constraintTop_toBottomOf="@+id/iFOimageView4"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/iFOUserID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="User ID"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="?android:attr/listDivider"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.592"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>