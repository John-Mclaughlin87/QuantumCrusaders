
    <merge xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <!-- This is where the activity_main_status menu starts-->
        <androidx.cardview.widget.CardView
            android:id="@+id/status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="0"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:baselineAligned="false"
                android:orientation="horizontal">
                <!-- This is where the left side starts-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp">

                        <ImageView
                            android:id="@+id/igc_icon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@mipmap/ic_launcher_round" />

                        <TextView
                            android:id="@+id/igc_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IGC"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/igc_icon"
                            app:layout_constraintStart_toStartOf="@+id/igc_icon"
                            app:layout_constraintTop_toBottomOf="@+id/igc_icon" />

                        <TextView
                            android:id="@+id/igc_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7,777,777,777"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toTopOf="@+id/igc_icon"
                            app:layout_constraintStart_toEndOf="@+id/igc_icon"
                            app:layout_constraintTop_toBottomOf="@+id/igc_icon"
                            app:srcCompat="@mipmap/ic_launcher_round" />

                        <ImageView
                            android:id="@+id/pigc_icon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/igc_text"
                            app:srcCompat="@mipmap/ic_launcher_round" />

                        <TextView
                            android:id="@+id/pigc_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PIGC"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="@+id/igc_text"
                            app:layout_constraintStart_toStartOf="@+id/igc_text"
                            app:layout_constraintTop_toBottomOf="@+id/pigc_icon" />

                        <TextView
                            android:id="@+id/pigc_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1025"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toTopOf="@+id/pigc_icon"
                            app:layout_constraintStart_toEndOf="@+id/pigc_icon"
                            app:layout_constraintTop_toBottomOf="@+id/pigc_icon" />

                        <ImageView
                            android:id="@+id/freelancer_icon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginBottom="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/pigc_value"
                            app:layout_constraintTop_toBottomOf="@+id/igc_text"
                            app:srcCompat="@mipmap/ic_launcher_round" />

                        <TextView
                            android:id="@+id/freelancer_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Freelancers"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/freelancer_icon"
                            app:layout_constraintTop_toBottomOf="@+id/freelancer_icon" />

                        <TextView
                            android:id="@+id/freelancer_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toTopOf="@+id/freelancer_icon"
                            app:layout_constraintStart_toEndOf="@+id/freelancer_icon"
                            app:layout_constraintTop_toBottomOf="@+id/freelancer_icon" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <!-- This is where the right side starts-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp">

                        <ImageView
                            android:id="@+id/ships_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@mipmap/ic_launcher_round" />

                        <TextView
                            android:id="@+id/ships_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Armada"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toStartOf="@+id/fleet_min_max2"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/ships_icon"
                            app:layout_constraintTop_toBottomOf="@+id/ships_icon" />

                        <ProgressBar
                            android:id="@+id/ships_progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:progress="50"
                            app:layout_constraintBottom_toTopOf="@+id/ships_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/ships_icon"
                            app:layout_constraintTop_toBottomOf="@+id/ships_icon" />


                        <TextView
                            android:id="@+id/ships_min_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text="2000"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/ships_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/ships_text"
                            app:layout_constraintVertical_bias="0.0" />

                        <ImageView
                            android:id="@+id/scouts_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ships_text"
                            app:srcCompat="@mipmap/ic_launcher_round" />

                        <TextView
                            android:id="@+id/scouts_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="8dp"
                            android:text="Outriders"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/scouts_min_max2"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/scouts_icon"
                            app:layout_constraintTop_toBottomOf="@+id/scouts_icon" />

                        <ProgressBar
                            android:id="@+id/scouts_progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:progress="75"
                            app:layout_constraintBottom_toTopOf="@+id/scouts_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/scouts_icon"
                            app:layout_constraintTop_toBottomOf="@+id/scouts_icon" />

                        <TextView
                            android:id="@+id/scouts_min_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text="2000"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/scouts_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/scouts_text"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/fleet_min_max2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textAlignment="textEnd"
                            app:layout_constraintBottom_toBottomOf="@+id/ships_text"
                            app:layout_constraintEnd_toStartOf="@+id/textView13"
                            app:layout_constraintTop_toTopOf="@+id/ships_text"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            app:layout_constraintBottom_toBottomOf="@+id/fleet_min_max2"
                            app:layout_constraintEnd_toStartOf="@+id/ships_min_max"
                            app:layout_constraintTop_toTopOf="@+id/fleet_min_max2" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            app:layout_constraintBottom_toBottomOf="@+id/scouts_min_max2"
                            app:layout_constraintEnd_toStartOf="@+id/scouts_min_max"
                            app:layout_constraintTop_toTopOf="@+id/scouts_min_max2" />

                        <TextView
                            android:id="@+id/scouts_min_max2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1750"
                            app:layout_constraintBottom_toBottomOf="@+id/scouts_text"
                            app:layout_constraintEnd_toStartOf="@+id/textView14"
                            app:layout_constraintTop_toTopOf="@+id/scouts_text" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <!-- This is where the activity_main_status menu ends-->
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </merge>









